{
  "version": 2,
  "buildCommand": "npx vite build --config vite.config.vercel.ts",
  "outputDirectory": "dist/public",
  "framework": null,
  "installCommand": "npm install",
  "functions": {
    "api/index.ts": {
      "includeFiles": "shared/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
